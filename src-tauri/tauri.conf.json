{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "three-dog-monitor",
    "version": "../package.json"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "shell": {
        "open": true
      },
      "http": {
        "request": true,
        "all": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "window": {
        "hide": true,
        "setDecorations": true,
        "setSize": true,
        "setResizable": true,
        "startDragging": true
      },
      "dialog": {
        "message": true,
        "ask": true
      },
      "clipboard": {
        "writeText": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.three-dog-monitor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "macOS": {
        "exceptionDomain": ""
      },
      "targets": [
        "msi",
        "dmg"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "三狗监控",
        "resizable": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "width": 280,
        "height": 366
      }
    ],
    "systemTray": {
      "iconPath": "assets/tray.png",
      "iconAsTemplate": true
    }
  }
}
